<Window x:Class="Lab04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab04"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Center" Width="780" Height="377" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <Button x:Name="addPerson" Content="Add" HorizontalAlignment="Left" Width="160" Height="40" VerticalAlignment="Top" Margin="26,407,0,0" Click="AddPerson_Click" />
        <Button x:Name="removePerson" Content="Remove" HorizontalAlignment="Left" Width="160" Height="40" VerticalAlignment="Top" Margin="221,407,0,0" Click="RemovePerson_Click" />
        <Button x:Name="editPerson" Content="Edit" HorizontalAlignment="Left" Width="160" Height="40" VerticalAlignment="Top" Margin="419,407,0,0" Click="EditPerson_Click" />

    </Grid>
</Window>
